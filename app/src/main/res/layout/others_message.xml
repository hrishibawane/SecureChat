<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="10dp"
    android:paddingStart="15dp"
    android:paddingEnd="60dp"
    android:clipToPadding="false">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/others_message"
        android:elevation="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/others_message_body"
            android:textColor="#000"
            android:padding="10dp"
            android:textSize="15sp"
            android:layout_alignParentStart="true"
            android:text="How are you doing? This is a long message that should probably wrap." />

        <TextView
            android:id="@+id/others_message_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="10dp"
            android:textSize="12sp"
            android:layout_below="@+id/others_message_body"
            android:layout_alignStart="@+id/others_message_body"/>

    </RelativeLayout>

</RelativeLayout>